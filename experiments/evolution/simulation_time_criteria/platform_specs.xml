<?xml version='1.0'?>
<!-- 
Describe the specifications of a platform by referencing profiles contained in profiles.xml
For now we don't define how they are connected for the sake of simplicity.
-->
<platform-specs>
    <node-profile number="0">
        <host-profile-ref name="raspberry Pi 4B"/>
        <link-profile-ref name="poor-adsl"/>
    </node-profile>
    <!-- Start with only raspberry, but the other number will increase after -->
    <node-profile number="5">
        <host-profile-ref name="raspberry Pi 4B"/>
        <link-profile-ref name="fiber"/>
    </node-profile>
    <node-profile number="0">
        <host-profile-ref name="MSI GP72 7RD Leopard"/>
        <link-profile-ref name="fiber"/>
    </node-profile>
    <node-profile number="0">
        <host-profile-ref name="Precision 7865"/>
        <link-profile-ref name="adsl"/>
    </node-profile>
</platform-specs>
